<header class="header-v4">
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Topbar -->
        <div class="top-bar">
            <div class="content-topbar flex-sb-m h-full container">
                <div class="left-top-bar">
                    Frais de port gratuit pour toute commande dépassant 60€
                </div>

                <div class="right-top-bar flex-w h-full">
                   

                    <% if user_signed_in? %>
                        <%= link_to "Mon Compte", user_path(current_user.id), class: "flex-c-m trans-04 p-lr-25" %>
                        <%= link_to "Déconnexion", destroy_user_session_path, class: "flex-c-m trans-04 p-lr-25" %>
                    <% else %>
                        <%= link_to "Connexion", new_user_session_path, :class => "flex-c-m trans-04 p-lr-25" %>
                        <%= link_to "Inscription", new_user_registration_path, :class => "flex-c-m trans-04 p-lr-25" %>
                    <% end %>

                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        FR
                    </a>

                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        EUR
                    </a>
                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                    Aide & FAQs
                </a>
                </div>
            </div>
        </div>

        <div class="wrap-menu-desktop  how-shadow1">
            <nav class="limiter-menu-desktop container">
                
                <!-- Logo desktop -->		
                <a href="#" class="logo">
                <img src="<%= asset_path( 'icons/logo-01.png' ) %>" alt="IMG-LOGO"/>
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li class="active-menu">
                            <a href="/">Accueil</a>
                        </li>

                        <li>
                             <%= link_to "Boutique", items_path, :class => "flex-c-m trans-04 p-lr-25" %>
                        </li>

                        <li>
                            <a href="/">Qui Sommes-nous ?</a>
                        </li>

                        <li>
                            <a href="/">Contact</a>
                        </li>
                    </ul>
                </div>	

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m">
                    <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                        <i class="zmdi zmdi-search"></i>
                    </div>

                    <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-cart">
                        <i class="zmdi zmdi-shopping-cart"></i>
                    </div>

      
                </div>
            </nav>
        </div>	
    </div>
    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->		
        <div class="logo-mobile">
            <a href="index.html"><img src="images/icons/logo-01.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m m-r-15">
            <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
                <i class="zmdi zmdi-search"></i>
            </div>

            <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-cart">
                <i class="zmdi zmdi-shopping-cart"></i>
            </div>

          
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="topbar-mobile">
            <li>
                <div class="left-top-bar">
                    Frais de port gratuit pour toute commande dépassant 60€
                </div>
            </li>

            <li>
                <div class="right-top-bar flex-w h-full">
                   
                    <% if user_signed_in? %>
                        <%= link_to "Mon Compte2", user_path(current_user.id), class: "flex-c-m p-lr-10 trans-04" %>
                    <% else %>
                        <%= link_to "Sign in", new_user_session_path, :class => "flex-c-m p-lr-10 trans-04" %>
                    <% end %>

                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        FR
                    </a>

                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        EUR
                    </a>
                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                    Aide & FAQs
                </a>
                </div>
            </li>
        </ul>

        <ul class="main-menu-m">
            <li>
                <a href="/">Accueil</a>
                <span class="arrow-main-menu-m">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </span>
            </li>

            <li>
            <%= link_to "Boutique", items_path, :class => "flex-c-m trans-04 p-lr-25" %>
            </li>

            <li>
                <a href="/">Qui sommes-nous?</a>
            </li>

            <li>
                <a href="/">Contact</a>
            </li>
        </ul>
    </div>

    <!-- Modal Search -->
    <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
        <div class="container-search-header">
            <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                <img src="images/icons/icon-close2.png" alt="CLOSE">
            </button>

            <form class="wrap-search-header flex-w p-l-15">
                <button class="flex-c-m trans-04">
                    <i class="zmdi zmdi-search"></i>
                </button>
                <input class="plh3" type="text" name="search" placeholder="Search...">
            </form>
        </div>
    </div>

</header>