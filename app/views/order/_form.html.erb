<%= form_with(model: order, local: true) do |form|%>
	<%= if order.errors.any? %>
		<div id="error_explanation">

			<h2><%= pluralize(order.errors.count, "error") %>interdit l'enregistrement de cette commande : </h2>

			<ul>
				<%= order.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>	

	<div class="form-group">
		<%= form.label :name %>
		<%= form.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= form.label :address %>
		<%= form.text_field :address, class: "form-control", rows: 3 %>
	</div>

	<div class="form-group">
		<%= form.label :email %>
		<%= form.text_field :email, class: "form-control" %>
	</div>

	<div class="actions">
		<%= form.submit "Valider", class: "btn btn-primary" %>
	</div>

<% end %>
